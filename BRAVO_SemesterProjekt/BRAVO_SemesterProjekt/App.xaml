<Application x:Class="BRAVO_SemesterProjekt.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BRAVO_SemesterProjekt"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontFamily" Value="Proxima Nova Rg" />
            <Setter Property="Foreground" Value="#FF535353" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="White" />
        </Style>
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="#FFFCA159" />
            <Setter Property="BorderBrush" Value="#FFFCA159" />
        </Style>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="White" />
            
        </Style>
        
    </Application.Resources>
</Application>
