<Page x:Class="BRAVO_SemesterProjekt.ShowMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BRAVO_SemesterProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300"
      Title="ShowMenu">

    <Grid>
        <Button x:Name="btn_Actor" Content="Aktør" HorizontalAlignment="Left" VerticalAlignment="Top" Width="650" Height="378" FontSize="36" Background="#FFFF5E03" Click="btn_Actor_Click"  />
        <Button x:Name="btn_Cluster" Content="Klynge" HorizontalAlignment="Left" Margin="644,0,0,0" VerticalAlignment="Top" Width="650" Height="378"  FontSize="36" Background="#FF019715" Click="btn_Cluster_Click" />
        <Button x:Name="btn_Product" Content="Produkt" HorizontalAlignment="Left" Margin="0,378,0,0" VerticalAlignment="Top" Width="650" Height="422" FontSize="36" Background="#FF0404FF" Click="btn_Product_Click"/>
        <Button x:Name="btn_Combo" Content="Kombi-Produkt" HorizontalAlignment="Left" Margin="644,378,0,0" VerticalAlignment="Top" Width="650" Height="422" FontSize="36" Background="Yellow" Click="btn_Combo_Click"/>

    </Grid>
</Page>
