<Page x:Class="BRAVO_SemesterProjekt.ShowActors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BRAVO_SemesterProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ShowActors">

    <Grid>
        <DataGrid x:Name="GridShowActor" HorizontalAlignment="Left" Margin="0,30,-400,-430" VerticalAlignment="Top" Height="250" Width="250"/>
        <Button x:Name="Btn_Search_Actor" Content="Button" HorizontalAlignment="Left"  Margin="120,0,0,274" Width="75" Click="Btn_Search_Actor_Click"/>
        <TextBox x:Name="SearchActor" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Path=Search}" VerticalAlignment="Top" Width="120"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="350,30,-300,0" VerticalAlignment="Top" Width="250" Height="250"/>
    </Grid>
</Page>
