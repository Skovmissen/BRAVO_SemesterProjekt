<Page x:Class="BRAVO_SemesterProjekt.ShowCombos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BRAVO_SemesterProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300"
      Title="ShowCombos">

    <Grid>
        <DataGrid x:Name="GridShowCombo" HorizontalAlignment="Left" Margin="0,109,0,0" VerticalAlignment="Top" Height="219" Width="250" SelectionChanged="GridShowCombo_SelectionChanged"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,55,0,0" TextWrapping="Wrap" Text="{Binding Path=Search }" VerticalAlignment="Top" Width="120"/>
        <DataGrid x:Name="dataGridCombo" HorizontalAlignment="Left" Margin="420,109,0,0" VerticalAlignment="Top" Height="219" Width="250"/>
        <Button x:Name="btn_Search_Combo" Content="Button" HorizontalAlignment="Left" Margin="208,59,0,0" VerticalAlignment="Top" Width="75" Click="btn_Search_Combo_Click"/>

    </Grid>
</Page>
