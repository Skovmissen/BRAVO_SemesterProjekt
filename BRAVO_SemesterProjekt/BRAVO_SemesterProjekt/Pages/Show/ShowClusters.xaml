<Page x:Class="BRAVO_SemesterProjekt.ShowClusters"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BRAVO_SemesterProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="814" d:DesignWidth="1301"
      Title="ShowClusters">

    <Grid>
        <Button x:Name="btn_search_cluster" Content="Søg" HorizontalAlignment="Left" Margin="137,28,0,0" VerticalAlignment="Top" Width="75" Click="btn_search_cluster_Click"/>
        <TextBox x:Name="search_cluster" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Path=Search}" VerticalAlignment="Top" Width="120" Margin="0,28,0,0"/>
        <DataGrid x:Name="dataGrid_cluster" HorizontalAlignment="Left" Margin="0,137,0,0" VerticalAlignment="Top" Height="91" Width="300" SelectionChanged="dataGrid_cluster_SelectionChanged"  />
        <Label x:Name="label" HorizontalAlignment="Left" Margin="352,33,0,0" VerticalAlignment="Top" Height="79" Width="244"/>
        <DataGrid x:Name="ClusterData" HorizontalAlignment="Left" Margin="352,137,0,0" VerticalAlignment="Top" Height="91" Width="409"/>

    </Grid>
</Page>
