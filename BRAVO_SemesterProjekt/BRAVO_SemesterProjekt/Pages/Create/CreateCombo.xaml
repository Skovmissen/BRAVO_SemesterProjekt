<Page x:Class="BRAVO_SemesterProjekt.CreateCombo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BRAVO_SemesterProjekt"      
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300"
      Title="CreateCombo">

    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="22" Margin="10,50,0,0" TextWrapping="Wrap" Text="{Binding Path= Name}" VerticalAlignment="Top" Width="120"/>
        <DatePicker HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" SelectedDate="{Binding StartTime}"/>
        <DatePicker HorizontalAlignment="Left" Margin="10,169,0,0" VerticalAlignment="Top" SelectedDate="{Binding EndTime}"/>
        <Button x:Name="button" Content="Opret kombi produkt" HorizontalAlignment="Left" Margin="10,212,0,0" VerticalAlignment="Top" Width="120" Height="48" Click="button_Click"/>

    </Grid>
</Page>
