<Page x:Class="BRAVO_SemesterProjekt.CreateCombo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BRAVO_SemesterProjekt"      
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300"
      Title="CreateCombo">

    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="22" Margin="10,50,0,0" TextWrapping="Wrap" Text="{Binding Path= Name}" VerticalAlignment="Top" Width="120"/>
        <DatePicker HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" SelectedDate="{Binding StartTime}"/>
        <DatePicker HorizontalAlignment="Left" Margin="10,158,0,0" VerticalAlignment="Top" SelectedDate="{Binding EndTime}"/>
        <Button x:Name="button" Content="Opret kombi produkt" HorizontalAlignment="Left" Margin="10,188,0,0" VerticalAlignment="Top" Width="120" Height="32" Click="btn_CreateCombo"/>
        <Label x:Name="label" Content="Navn" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.023,0.324" Width="120"/>
        <Label x:Name="label1" Content="Startdato" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Width="102"/>
        <Label x:Name="label2" Content="slutdato" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Width="102"/>
        <DataGrid x:Name="dg_showcombiproducts" HorizontalAlignment="Left" Margin="149,50,0,0" VerticalAlignment="Top" Height="170" Width="574" IsReadOnly="True" ColumnWidth="*" SelectionChanged="dg_showcombiproducts_SelectionChanged"/>
        <DataGrid x:Name="dg_showproduts" HorizontalAlignment="Left" Margin="149,283,0,0" VerticalAlignment="Top" Height="121" Width="216" IsReadOnly="True" ColumnWidth="*"/>
        <ComboBox x:Name="cmb_products" HorizontalAlignment="Left" Margin="0,283,0,0" VerticalAlignment="Top" Width="120" DropDownClosed="cmb_products_DropDownClosed"/>
        <Button x:Name="button1" Content="Tilføj produkt" HorizontalAlignment="Left" Margin="0,310,0,0" VerticalAlignment="Top" Width="86" Click="btn_addproductInCombi"/>
        <Label x:Name="label3" Content="{Binding Path=Name }" HorizontalAlignment="Left" Margin="149,251,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" Height="27"/>
        <Label x:Name="label2_Copy" Content="Tryk på en klynge for yderlig information" HorizontalAlignment="Left" Margin="149,225,0,0" VerticalAlignment="Top" Width="388" FontSize="8"/>

    </Grid>
</Page>
