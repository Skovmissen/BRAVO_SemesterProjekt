<Page x:Class="BRAVO_SemesterProjekt.CreateCluster"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BRAVO_SemesterProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300"
      Title="CreateCluster">

    <Grid>
        <Button x:Name="button" Content="Opret klynge" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Width="75" Click="btn_gem"/>
        <TextBox x:Name="txt_navn" HorizontalAlignment="Left" Height="23" Margin="10,65,0,0" TextWrapping="Wrap" Text="{Binding Path = Name}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Indtast navn:" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cmb_actor" HorizontalAlignment="Left" Margin="10,481,0,0" VerticalAlignment="Top" Width="120" DropDownClosed="cmb_actor_DropDownClosed"/>
        <DataGrid x:Name="dg_showcluster" HorizontalAlignment="Left" Margin="10,156,0,0" VerticalAlignment="Top" Height="170" Width="388"/>

    </Grid>
</Page>
