<Page x:Class="BRAVO_SemesterProjekt.EditProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BRAVO_SemesterProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300"
      Title="EditProducts">

    <Grid>
        <Label x:Name="lbl_Edit_Product" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="168"/>
        <DataGrid x:Name="dataGrid_Edit_Product" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Height="201" Width="168" SelectionChanged="dataGrid_Edit_Product_SelectionChanged"/>
        <TextBox x:Name="textBox_Search_Edit_Product" HorizontalAlignment="Left" Height="23" Margin="10,247,0,0" TextWrapping="Wrap" Text="{Binding Path=Search}" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button_Edit_Product" Content="Opdatere" HorizontalAlignment="Left" Margin="547,279,0,0" VerticalAlignment="Top" Width="75" Click="button_Edit_Product_Click"/>
        <Label x:Name="lbl_ProductName" Content="Produkt navn" HorizontalAlignment="Left" Margin="213,10,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox_ProductName" HorizontalAlignment="Left" Height="23" Margin="213,41,0,0" TextWrapping="Wrap" Text="{Binding Path=Name}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_City" Content="By" HorizontalAlignment="Left" Margin="213,69,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox_City" HorizontalAlignment="Left" Height="23" Margin="213,99,0,0" TextWrapping="Wrap" Text="{Binding Path=City}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_Zipcode" Content="Postnr" HorizontalAlignment="Left" Margin="213,127,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox_Zipcode" HorizontalAlignment="Left" Height="23" Margin="213,157,0,0" TextWrapping="Wrap" Text="{Binding Path=Zipcode}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_Region" Content="Kommune" HorizontalAlignment="Left" Margin="213,185,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox_Region" HorizontalAlignment="Left" Height="23" Margin="213,216,0,0" TextWrapping="Wrap" Text="{Binding Path=Region}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_street" Content="Vejnavn" HorizontalAlignment="Left" Margin="213,247,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox_Street" HorizontalAlignment="Left" Height="23" Margin="213,278,0,0" TextWrapping="Wrap" Text="{Binding Path=Street}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_Latitude" Content="Breddegrad" HorizontalAlignment="Left" Margin="389,10,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox_Latitude" HorizontalAlignment="Left" Height="23" Margin="389,41,0,0" TextWrapping="Wrap" Text="{Binding Path=Latitude}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_Longtitude" Content="Længdegrad" HorizontalAlignment="Left" Margin="389,69,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox_Longtitude" HorizontalAlignment="Left" Height="23" Margin="389,99,0,0" TextWrapping="Wrap" Text="{Binding Path=Longtitude}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_URL" Content="Url" HorizontalAlignment="Left" Margin="389,127,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox_URL" HorizontalAlignment="Left" Height="23" Margin="389,157,0,0" TextWrapping="Wrap" Text="{Binding Path=Url}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_Description" Content="Beskrivelse" HorizontalAlignment="Left" Margin="389,185,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox_Description" HorizontalAlignment="Left" Height="23" Margin="389,216,0,0" TextWrapping="Wrap" Text="{Binding Path=Description}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_ActorName" Content="Aktør" HorizontalAlignment="Left" Margin="389,247,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox_ActorName" HorizontalAlignment="Left" Height="23" Margin="389,276,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="checkBox" Content="Aktiver" IsChecked="{Binding Path=Activate}" HorizontalAlignment="Left" Margin="547,227,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Søg"  HorizontalAlignment="Left" Margin="10,281,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Page>
