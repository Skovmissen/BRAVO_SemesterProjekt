<Page x:Class="BRAVO_SemesterProjekt.EditProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BRAVO_SemesterProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="EditProducts">

    <Grid>
        <DataGrid x:Name="dataGrid_Edit_Product" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Height="206" Width="1170" SelectionChanged="dataGrid_Edit_Product_SelectionChanged"/>
        <Button x:Name="button" Content="Søg"  HorizontalAlignment="Left" Margin="1106,82,0,0" VerticalAlignment="Top" Width="74" Click="button_Click" Background="White" FontFamily="Proxima Nova Rg" FontSize="22" Foreground="#FF535353" Height="37"/>
        <Button x:Name="button_Edit_Product" Content="Opdatere" HorizontalAlignment="Left" Margin="706,609,0,0" VerticalAlignment="Top" Width="186" Click="button_Edit_Product_Click" Height="56" Background="White" FontFamily="Proxima Nova Rg" FontSize="22" Foreground="#FF535353"/>
        <Label x:Name="lbl_Edit_Product" Content="Vælg det produkt du vil redigere" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Width="266" Height="26" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <Label x:Name="lbl_ProductName" Content="Produkt navn" HorizontalAlignment="Left" Margin="14,346,0,0" VerticalAlignment="Top" Width="158" Height="26" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <Label x:Name="lbl_City" Content="By" HorizontalAlignment="Left" Margin="14,406,0,0" VerticalAlignment="Top" Width="158" Height="26" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <Label x:Name="lbl_Zipcode" Content="Postnr" HorizontalAlignment="Left" Margin="14,466,0,0" VerticalAlignment="Top" Width="158" Height="26" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <Label x:Name="lbl_Region" Content="Kommune" HorizontalAlignment="Left" Margin="14,526,0,0" VerticalAlignment="Top" Width="158" Height="26" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <Label x:Name="lbl_street" Content="Vejnavn" HorizontalAlignment="Left" Margin="14,588,0,0" VerticalAlignment="Top" Width="158" Height="28" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <Label x:Name="lbl_Latitude" Content="Breddegrad" HorizontalAlignment="Left" Margin="293,346,0,0" VerticalAlignment="Top" Width="158" Height="26" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <Label x:Name="lbl_Longtitude" Content="Længdegrad" HorizontalAlignment="Left" Margin="293,406,0,0" VerticalAlignment="Top" Width="158" Height="26" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <Label x:Name="lbl_URL" Content="Url" HorizontalAlignment="Left" Margin="293,466,0,0" VerticalAlignment="Top" Width="158" Height="26" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <Label x:Name="lbl_Description" Content="Beskrivelse" HorizontalAlignment="Left" Margin="543,346,0,0" VerticalAlignment="Top" Width="158" Height="26" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <Label x:Name="label_Category" Content="Kategori" HorizontalAlignment="Left" Margin="293,526,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.222,1.043" Width="190" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <TextBox x:Name="textBox_Search_Edit_Product" HorizontalAlignment="Left" Height="37" Margin="913,82,0,0" TextWrapping="Wrap" Text="{Binding Path=Search}" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="textBox_ProductName" HorizontalAlignment="Left" Height="24" Margin="14,378,0,0" TextWrapping="Wrap" Text="{Binding Path=Name}" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="textBox_City" HorizontalAlignment="Left" Height="24" Margin="14,436,0,0" TextWrapping="Wrap" Text="{Binding Path=City}" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="textBox_Zipcode" HorizontalAlignment="Left" Height="24" Margin="14,496,0,0" TextWrapping="Wrap" Text="{Binding Path=Zipcode}" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="textBox_Region" HorizontalAlignment="Left" Height="22" Margin="14,560,0,0" TextWrapping="Wrap" Text="{Binding Path=Region}" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="textBox_Street" HorizontalAlignment="Left" Height="24" Margin="14,620,0,0" TextWrapping="Wrap" Text="{Binding Path=Street}" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="textBox_Latitude" HorizontalAlignment="Left" Height="24" Margin="294,378,0,0" TextWrapping="Wrap" Text="{Binding Path=Latitude}" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="textBox_Longtitude" HorizontalAlignment="Left" Height="24" Margin="294,436,0,0" TextWrapping="Wrap" Text="{Binding Path=Longtitude}" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="textBox_URL" HorizontalAlignment="Left" Height="24" Margin="294,496,0,0" TextWrapping="Wrap" Text="{Binding Path=Url}" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="textBox_Description" HorizontalAlignment="Left" Height="174" Margin="543,378,0,0" TextWrapping="Wrap" Text="{Binding Path=Description}" VerticalAlignment="Top" Width="349"/>
        <CheckBox x:Name="checkBox" Content="Aktiver" IsChecked="{Binding Path=Activate}" HorizontalAlignment="Left" Margin="543,568,0,0" VerticalAlignment="Top" Height="16" Width="90" FontFamily="Proxima Nova Rg" FontWeight="Bold" FontSize="14" Foreground="#FF535353"/>
        <ComboBox x:Name="cmb_category" HorizontalAlignment="Left" Margin="294,562,0,0" VerticalAlignment="Top" Width="120" DropDownClosed="cmb_category_DropDownClosed"/>
        <Button x:Name="button_Copy" Content="Tilbage" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="127" Height="49" Background="White" Click="button_back_Click"/>

    </Grid>
</Page>
