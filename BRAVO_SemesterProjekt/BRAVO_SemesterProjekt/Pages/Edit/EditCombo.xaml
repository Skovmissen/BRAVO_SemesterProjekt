<Page x:Class="BRAVO_SemesterProjekt.EditCombo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BRAVO_SemesterProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EditCombo">

    <Grid>
        <DataGrid x:Name="dataGrid_ShowCombo" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Height="115" Width="187"/>
        <Label x:Name="header_gridview" Content="Redigér kombinationsprodukt" HorizontalAlignment="Left" Margin="3,53,0,0" VerticalAlignment="Top" Width="194"/>
        <Label x:Name="label_combiproduct" Content="Kombiprodukt" HorizontalAlignment="Left" Margin="203,76,0,0" VerticalAlignment="Top" Width="97"/>
        <TextBox x:Name="textBox_ComboName" HorizontalAlignment="Left" Height="23" Margin="206,103,-26,0" TextWrapping="Wrap" Text="{Binding Path=Name}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_startTime" Content="Starttid" HorizontalAlignment="Left" Margin="205,137,0,0" VerticalAlignment="Top" Height="24" Width="50"/>
        <TextBox x:Name="textBox_startTime" HorizontalAlignment="Left" Height="23" Margin="209,162,-29,0" TextWrapping="Wrap" Text="{Binding Path=StartTime}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_endTime" Content="Sluttid" HorizontalAlignment="Left" Margin="209,198,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_endTime" HorizontalAlignment="Left" Height="23" Margin="211,223,-31,0" TextWrapping="Wrap" Text="{Binding Path=EndTime}" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="checkBox" Content="Aktiv" IsChecked="{Binding Path=Activate}" HorizontalAlignment="Left" Margin="214,264,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
