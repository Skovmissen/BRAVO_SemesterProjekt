<Page x:Class="BRAVO_SemesterProjekt.EditCombo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BRAVO_SemesterProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300"

      Title="EditCombo">

    <Grid>
        <DataGrid x:Name="dataGrid_edit_Combo" HorizontalAlignment="Left" Margin="14,136,0,0" VerticalAlignment="Top" Height="302" Width="404" SelectionChanged="dataGrid_edit_Combo_SelectionChanged"/>
        <Label x:Name="header_gridview" Content="Redigér kombinationsprodukt" HorizontalAlignment="Left" Margin="8,108,0,0" VerticalAlignment="Top" Width="194" Foreground="#FF535353"/>
        <Label x:Name="label_combiproduct" Content="Kombiprodukt" HorizontalAlignment="Left" Margin="444,136,0,0" VerticalAlignment="Top" Width="96" Foreground="#FF535353"/>
        <TextBox x:Name="textBox_ComboName" HorizontalAlignment="Left" Height="22" Margin="444,165,0,0" TextWrapping="Wrap" Text="{Binding Path=Name}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_startTime" Content="Starttid" HorizontalAlignment="Left" Margin="444,196,0,0" VerticalAlignment="Top" Height="24" Width="50" Foreground="#FF535353"/>
        <TextBox x:Name="textBox_startTime" HorizontalAlignment="Left" Height="24" Margin="444,225,0,0" TextWrapping="Wrap" Text="{Binding Path=StartTime}" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_endTime" Content="Sluttid" HorizontalAlignment="Left" Margin="444,249,0,0" VerticalAlignment="Top" Foreground="#FF535353"/>
        <TextBox x:Name="textBox_endTime" HorizontalAlignment="Left" Height="22" Margin="444,282,0,0" TextWrapping="Wrap" Text="{Binding Path=EndTime}" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="checkBox" Content="Aktiv" IsChecked="{Binding Path=Activate}" HorizontalAlignment="Left" Margin="444,515,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_search" HorizontalAlignment="Left" Height="31" Margin="207,101,0,0" TextWrapping="Wrap" Text="{Binding Path=Search}" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button_search" Content="Søg" HorizontalAlignment="Left" Margin="344,101,0,0" VerticalAlignment="Top" Width="74" Click="button_search_Click" Foreground="Black" Background="White" Height="31"/>
        <Button x:Name="button_update" Content="Opdater" HorizontalAlignment="Left" VerticalAlignment="Top" Width="154" Margin="612,515,0,0" Click="button_update_Click" Height="42" Background="White"/>
        <Label x:Name="label_description" Content="Beskrivelse" HorizontalAlignment="Left" Margin="444,309,0,0" VerticalAlignment="Top" Foreground="#FF535353"/>
        <TextBox x:Name="textBox_description" HorizontalAlignment="Left" Height="110" Margin="444,333,0,0" TextWrapping="Wrap" Text="{Binding Path=Description}" VerticalAlignment="Top" Width="322"/>
        <Label x:Name="label_price" Content="Pris" HorizontalAlignment="Left" Margin="444,448,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_price" HorizontalAlignment="Left" Height="24" Margin="444,477,0,0" TextWrapping="Wrap" Text="{Binding Path=Description}" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Tilbage" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="127" Height="49" Background="White" Click="button_Click"/>

    </Grid>
</Page>
