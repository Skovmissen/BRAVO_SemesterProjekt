<Window x:Class="BRAVO_SemesterProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BRAVO_SemesterProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="814" Width="1301" WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel Margin="0,0,0,737">
            <Menu DockPanel.Dock="Top" Height="44" Margin="0,0,0,0">
                <MenuItem Header="Opret" Height="33" MinWidth="100" FontSize="14">
                    <MenuItem Name="NewActor"  Header="Aktør" Click="NewActor_Click"  />
                    <MenuItem Name="NewProduct"  Header="Produkt" Click="NewProduct_Click"  />
                    <MenuItem Name="NewKombi"  Header="Kombi-produkt" Click="NewKombi_Click"  />
                    <MenuItem Name="NewCluster"  Header="Klynge" Click="NewCluster_Click"  />
                </MenuItem>
                <MenuItem Header="Redigere" Height="33" MinWidth="100" FontSize="14">
                    <MenuItem Name="EditActor"  Header="Aktør" Click="EditActor_Click"  />
                    <MenuItem Name="EditProduct"  Header="Produkt" Click="EditProduct_Click"  />
                    <MenuItem Name="EditCombo"  Header="Kombi-produkt" Click="EditCombo_Click"  />
                    <MenuItem Name="EditCluster"  Header="Klynge" Click="EditCluster_Click"  />
                </MenuItem>
                <MenuItem Header="Oversigt" Height="33" MinWidth="100" FontSize="14">
                    <MenuItem Name="ShowActors"  Header="Aktører" Click="ShowActors_Click"  />
                    <MenuItem Name="ShowProducts"  Header="Produkter" Click="ShowProduct_Click"  />
                    <MenuItem Name="ShowCombos"  Header="Kombi-produkter" Click="ShowCombos_Click"  />
                    <MenuItem Name="ShowClusters"  Header="Klynger" Click="ShowClusters_Click"  />
                </MenuItem>
                <MenuItem Header="Upload" Height="33" MinWidth="100" FontSize="14" Margin="30,0,0,0" >
                    <MenuItem Header="XML" Height="33" MinWidth="100" FontSize="14" Click="Upload_Click"/>
                </MenuItem>
                <Hyperlink NavigateUri="MainWindow.xaml" RequestNavigate="Hyperlink_RequestNavigate">Forside</Hyperlink>
            </Menu>

        </DockPanel>
        <Frame x:Name="frame" HorizontalAlignment="Left" Height="737" VerticalAlignment="Top" Width="1293" Margin="0,46,0,0" NavigationUIVisibility="Hidden">

        </Frame>
        <Button x:Name="btn_Create" Content="OPRET" HorizontalAlignment="Left" Margin="0,46,0,0" VerticalAlignment="Top" Width="637" Height="382" FontSize="36" Background="#FFFF5E03" Click="btn_Create_Click" />
        <Button x:Name="btn_Edit" Content="REDIGERE" HorizontalAlignment="Left" Margin="637,46,0,0" VerticalAlignment="Top" Width="656" Height="382"  FontSize="36" Background="#FF019715" Click="btn_Edit_Click"/>
        <Button x:Name="btn_Show" Content="OVERSIGT" HorizontalAlignment="Left" Margin="0,428,0,0" VerticalAlignment="Top" Width="637" Height="355" FontSize="36" Background="#FF0404FF" Click="btn_Show_Click"/>
        <Button x:Name="btn_Upload" Content="UPLOAD" HorizontalAlignment="Left" Margin="637,428,0,0" VerticalAlignment="Top" Width="656" Height="355" FontSize="36" Background="Yellow" Click="btn_Upload_Click"/>


    </Grid>
</Window>
